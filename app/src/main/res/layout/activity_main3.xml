<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFAFCC">>


    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biodata Kelompok"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/editTextNamaKelompok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Kelompok"
        android:inputType="text"
        android:layout_marginTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anggota Kelompok:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNama1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama 1"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextNama2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama 2"
                android:inputType="text" />

            <EditText
                android:id="@+id/editTextNama3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama 3"
                android:inputType="text" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:layout_marginTop="16dp"
        android:background="#A2D2FF"/>

</LinearLayout>